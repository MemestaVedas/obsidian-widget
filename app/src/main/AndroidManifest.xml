<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_DOCUMENTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Query Obsidian app -->
    <queries>
        <package android:name="md.obsidian" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="obsidian" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ObsidianWidget"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Widget Provider -->
        <receiver
            android:name=".NoteWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.obsidianwidget.ACTION_GESTURE" />
                <action android:name="com.obsidianwidget.ACTION_PAGE_CHANGE" />
                <action android:name="com.obsidianwidget.ACTION_SCROLL" />
                <action android:name="com.obsidianwidget.ACTION_OPEN_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_TOGGLE_COMPACT" />
                <action android:name="com.obsidianwidget.ACTION_SHOW_OVERLAY" />
                <action android:name="com.obsidianwidget.ACTION_HIDE_OVERLAY" />
                <action android:name="com.obsidianwidget.ACTION_ADD_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_REMOVE_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_REORDER" />
                <action android:name="com.obsidianwidget.ACTION_OPEN_SETTINGS" />
                <action android:name="com.obsidianwidget.ACTION_PREV_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_NEXT_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_ITEM_CLICK" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <!-- Gesture Receiver -->
        <receiver
            android:name=".WidgetGestureReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.obsidianwidget.ACTION_PAGE_CHANGE" />
                <action android:name="com.obsidianwidget.ACTION_SCROLL" />
                <action android:name="com.obsidianwidget.ACTION_OPEN_NOTE" />
                <action android:name="com.obsidianwidget.ACTION_TOGGLE_COMPACT" />
                <action android:name="com.obsidianwidget.ACTION_SHOW_OVERLAY" />
                <action android:name="com.obsidianwidget.ACTION_HIDE_OVERLAY" />
            </intent-filter>
        </receiver>

        <!-- Widget RemoteViews Service -->
        <service
            android:name=".NoteWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <!-- Widget Configuration Activity -->
        <activity
            android:name=".VaultSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.ObsidianWidget.Config"
            android:label="Setup Vault Access" />

        <activity
            android:name=".WidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.ObsidianWidget.Config">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

    </application>

</manifest>
