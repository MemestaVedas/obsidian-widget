<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme (Material3 DayNight) -->
    <style name="Theme.ObsidianWidget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/obsidian_accent</item>
        <item name="colorPrimaryContainer">@color/obsidian_accent</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnPrimaryContainer">#FFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/obsidian_accent_light</item>
        <item name="colorSecondaryContainer">@color/obsidian_surface</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnSecondaryContainer">@color/obsidian_text_primary</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/obsidian_bg_primary</item>
        <item name="colorSurface">@color/obsidian_bg_secondary</item>
        <item name="colorSurfaceVariant">@color/obsidian_bg_tertiary</item>
        <item name="colorOnSurface">@color/obsidian_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/obsidian_text_secondary</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/obsidian_bg_primary</item>
        <item name="android:navigationBarColor">@color/obsidian_bg_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/obsidian_text_primary</item>
        <item name="android:textColorSecondary">@color/obsidian_text_secondary</item>
        <item name="android:textColorHint">@color/obsidian_text_muted</item>
    </style>

    <!-- Widget Configuration Activity Theme -->
    <style name="Theme.ObsidianWidget.Config" parent="Theme.ObsidianWidget">
        <item name="android:windowBackground">@color/obsidian_bg_primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Accent Button Style -->
    <style name="Widget.ObsidianWidget.Button.Accent" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_accent_rounded</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dark EditText Style -->
    <style name="Widget.ObsidianWidget.EditText.Dark" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_dark_bg</item>
        <item name="android:textColor">@color/obsidian_text_primary</item>
        <item name="android:textColorHint">@color/obsidian_text_muted</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Section Label Style -->
    <style name="Widget.ObsidianWidget.SectionLabel" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/obsidian_text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
