<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ObsidianWidget" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_accent</item>
        <item name="colorPrimaryContainer">@color/app_accent_dim</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnPrimaryContainer">#FFFFFF</item>

        <item name="colorSecondary">@color/app_accent</item>
        <item name="colorSecondaryContainer">@color/app_surface</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnSecondaryContainer">@color/app_text_primary</item>

        <item name="android:colorBackground">@color/app_bg</item>
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorSurfaceVariant">@color/app_surface_elevated</item>
        <item name="colorOnSurface">@color/app_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/app_text_secondary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/app_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.ObsidianWidget.Activity</item>

        <item name="android:textColorPrimary">@color/app_text_primary</item>
        <item name="android:textColorSecondary">@color/app_text_secondary</item>
        <item name="android:textColorHint">@color/app_text_muted</item>
    </style>

    <style name="Theme.ObsidianWidget.Config" parent="Theme.ObsidianWidget">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Animation.ObsidianWidget.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/glass_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/glass_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/glass_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/glass_slide_out_right</item>
    </style>

    <style name="Widget.ObsidianWidget.Button.Accent" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_glass_primary_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.ObsidianWidget.Button.Secondary" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_glass_secondary_button</item>
        <item name="android:textColor">@color/app_text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.ObsidianWidget.EditText.Dark" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_glass_input</item>
        <item name="android:textColor">@color/app_text_primary</item>
        <item name="android:textColorHint">@color/app_text_muted</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.ObsidianWidget.SectionLabel" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/app_text_muted</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
