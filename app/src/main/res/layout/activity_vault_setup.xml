<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_liquid_screen">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingTop="48dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/card_setup_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vault_setup_title"
                    android:textColor="@color/app_text_primary"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/vault_setup_description"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Current Vault Status -->
            <LinearLayout
                android:id="@+id/card_setup_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/Widget.ObsidianWidget.SectionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vault_setup_status_title" />

                <TextView
                    android:id="@+id/tv_vault_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_stat_block"
                    android:lineSpacingExtra="3dp"
                    android:padding="14dp"
                    android:text="@string/vault_status_not_configured"
                    android:textColor="@color/app_text_primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Actions -->
            <Button
                android:id="@+id/btn_select_vault"
                style="@style/Widget.ObsidianWidget.Button.Accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_select_vault_folder" />

            <Button
                android:id="@+id/btn_test_access"
                style="@style/Widget.ObsidianWidget.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:text="@string/btn_test_vault_access" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
