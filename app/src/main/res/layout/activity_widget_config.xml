<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1e1e1e">

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#dcddde"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Vault Path Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_vault_path"
        android:textSize="14sp"
        android:textColor="#dcddde"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_select_vault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_select_vault"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/btn_accent_rounded"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/tv_vault_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vault_path_placeholder"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Vault Name Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_vault_name"
        android:textSize="14sp"
        android:textColor="#dcddde"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_vault_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_vault_name"
        android:textColor="#dcddde"
        android:textColorHint="#666666"
        android:textSize="14sp"
        android:background="@drawable/edit_text_dark_bg"
        android:padding="12dp"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_initial_notes"
        android:textSize="14sp"
        android:textColor="#dcddde"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_search_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search notes..."
        android:textColor="#dcddde"
        android:textColorHint="#666666"
        android:textSize="14sp"
        android:background="@drawable/edit_text_dark_bg"
        android:padding="10dp"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/lv_vault_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_dark_bg"
        android:divider="#3d3d3d"
        android:dividerHeight="1dp"
        android:padding="4dp"
        android:layout_marginBottom="16dp"
        android:choiceMode="multipleChoice" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_save_config"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_accent_rounded"
        android:paddingTop="14dp"
        android:paddingBottom="14dp" />

</LinearLayout>
