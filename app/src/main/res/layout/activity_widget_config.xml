<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_liquid_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="48dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/card_config_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_glass_card"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/config_title"
                android:textColor="@color/app_text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/config_subtitle"
                android:textColor="@color/app_text_secondary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Vault Info -->
        <LinearLayout
            android:id="@+id/card_vault_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_glass_card"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                style="@style/Widget.ObsidianWidget.SectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_vault_path" />

            <Button
                android:id="@+id/btn_select_vault"
                style="@style/Widget.ObsidianWidget.Button.Accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_select_vault" />

            <TextView
                android:id="@+id/tv_vault_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:text="@string/vault_path_placeholder"
                android:textColor="@color/app_text_muted"
                android:textSize="12sp" />

            <TextView
                style="@style/Widget.ObsidianWidget.SectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_vault_name" />

            <EditText
                android:id="@+id/et_vault_name"
                style="@style/Widget.ObsidianWidget.EditText.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_vault_name" />
        </LinearLayout>

        <!-- Note Selection -->
        <LinearLayout
            android:id="@+id/card_note_selection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_glass_card"
            android:orientation="vertical"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Widget.ObsidianWidget.SectionLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="0dp"
                    android:text="@string/label_initial_notes" />

                <TextView
                    android:id="@+id/tv_selection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selection_count"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_search_notes"
                style="@style/Widget.ObsidianWidget.EditText.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/hint_search_notes"
                android:imeOptions="actionDone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_glass_list"
                android:padding="4dp">

                <ListView
                    android:id="@+id/lv_vault_files"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:choiceMode="none"
                    android:clipToPadding="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="2dp"
                    android:fastScrollEnabled="true"
                    android:listSelector="@android:color/transparent"
                    android:padding="2dp"
                    android:scrollbars="vertical" />

                <TextView
                    android:id="@+id/tv_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="@string/empty_notes_state"
                    android:textColor="@color/app_text_muted"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progress_loading"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/app_text_secondary"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_config"
            style="@style/Widget.ObsidianWidget.Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_save_config" />

    </LinearLayout>
</FrameLayout>
