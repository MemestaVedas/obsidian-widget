<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_checkbox_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal"
    android:minHeight="32dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_marginBottom="2dp">

    <ImageView
        android:id="@+id/iv_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@drawable/ic_check_box_outline_blank"
        android:contentDescription="Toggle item"
        android:tint="@color/app_text_secondary" />

    <TextView
        android:id="@+id/tv_checkbox_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/app_text_primary"
        android:lineSpacingExtra="2dp"
        android:gravity="top" />

</LinearLayout>
