<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_liquid_screen">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingTop="48dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: Title + Status Chip -->
            <LinearLayout
                android:id="@+id/header_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/app_text_primary"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_vault_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_chip_disconnected"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp"
                    android:text="@string/status_not_connected"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/main_hero_subtitle"
                android:textColor="@color/app_text_muted"
                android:textSize="14sp" />

            <!-- Action Card: Vault -->
            <LinearLayout
                android:id="@+id/card_vault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_action_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_vault_card_title"
                        android:textColor="@color/app_text_primary"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_vault_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/main_vault_not_connected"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textColor="@color/app_text_muted"
                    android:textSize="22sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Action Card: Widget Notes -->
            <LinearLayout
                android:id="@+id/card_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_action_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_notes_card_title"
                        android:textColor="@color/app_text_primary"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_notes_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/main_notes_subtitle_empty"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textColor="@color/app_text_muted"
                    android:textSize="22sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Inline Info Row: Files / Folders (visible when vault connected) -->
            <LinearLayout
                android:id="@+id/layout_info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_info_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 files"
                    android:textColor="@color/app_text_muted"
                    android:textSize="13sp" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/app_text_muted" />

                <TextView
                    android:id="@+id/tv_info_folders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 folders"
                    android:textColor="@color/app_text_muted"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/main_footer_copy"
                android:textColor="@color/app_text_muted"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
